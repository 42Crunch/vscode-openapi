{
	"id":"https://spec.openapis.org/oas/3.0/schema/2019-04-02",
	"$schema":"http://json-schema.org/draft-04/schema#",
	"description":"Validation schema for OpenAPI Specification Extensions",
	"title":"Validation schema for OpenAPI Specification Extensions",
	"type":"object",
	"definitions":{
		"X42cSensitivityData":{
			"type":"integer",
			"minimum":1,
			"maximum":5,
			"default":3
		},
		"X42cSample":{
			"type":"null"
		},
		"X42cLocalStrategy":{
			"type":"object",
			"properties":{
				"x-42c-strategy":{
					"type":"object",
					"properties":{
						"protections":{
							"type":"array",
							"items":{
								"anyOf":[
									{
										"$ref":"#/definitions/X42cJwtValidation"
									},
									{
										"$ref":"#/definitions/X42cJwtValidationEc"
									},
									{
										"$ref":"#/definitions/X42cJwtValidationHmac"
									},
									{
										"$ref":"#/definitions/X42cJwtVvalidationRsa"
									}
								]
							}
						}
					}
				}
			}
		},
		"X42cRequestStrategies":{
			"type":"object",
			"properties":{
				"operations":{
					"type":"array",
					"items":{
						"type":"string",
						"enum":[
							"get",
							"put",
							"post",
							"delete",
							"options",
							"head",
							"patch",
							"trace"
						]
					}
				},
				"x-42c-strategy":{
					"type":"object",
					"properties":{
						"protections":{
							"type":"array"
						}
					}
				}
			}
		},
		"X42cResponseStrategies":{
			"type":"object",
			"properties":{
				"responses":{
					"type":"array",
					"items":{
						"type":"string",
						"pattern":"^([1-5](?:\\d{2}|XX)|default)$"
					}
				},
				"x-42c-strategy":{
					"type":"object",
					"properties":{
						"protections":{
							"type":"array"
						}
					}
				}
			}
		},
		"X42cNoAuthentication":{
			"type":"boolean",
			"default":false
		},
		"X42cSensitivity":{
			"type":"integer",
			"minimum":1,
			"maximum":5,
			"default":3
		},
		"X42cJwtValidation":{
			"allOf":[
				{
					"$ref":"#/definitions/X42cJwtCore"
				},
				{
					"type":"object",
					"properties":{
						"authorized.algorithms":{
							"type":"array"
						}
					}
				}
			]
		},
		"X42cJwtValidationEc":{
			"$ref":"#/definitions/X42cJwtCore"
		},
		"X42cJwtValidationHmac":{
			"$ref":"#/definitions/X42cJwtCore"
		},
		"X42cJwtVvalidationRsa":{
			"$ref":"#/definitions/X42cJwtCore"
		},
		"X42cJwtCore":{
			"type":"object",
			"properties":{
				"header.name":{
					"type":"string"
				},
				"jwk.envvar":{
					"type":"string",
					"default":"JWK"
				},
				"forward.jwt":{
					"type":"boolean",
					"default":true
				},
				"lifetime":{
					"type":"integer",
					"default":5
				},
				"drift":{
					"type":"integer",
					"default":10
				},
				"jti.timeout":{
					"type":"integer",
					"default":86400
				}
			}
		}
	}
}