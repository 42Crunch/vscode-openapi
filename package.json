      {
        "command": "openapi.addInfo",
        "enablement": "view == openapiOutline",
        "title": "Add 'info' entry"
      },
      {
        "command": "openapi.v3addInfo",
        "enablement": "view == openapiOutline",
        "title": "Add 'info' entry"
      },
      {
        "command": "openapi.addSecurityDefinitionBasic",
